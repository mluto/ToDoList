<Window x:Class="ToDoList.AddTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Task" Height="250" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="TitleTextBox" Width="250" Margin="5" />
            <DatePicker Name="DueDatePicker" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <ComboBox Name="HourComboBox" Width="100" Margin="5" />
                <ComboBox Name="MinuteComboBox" Width="100" Margin="5" />
            </StackPanel>
            <Button Name="AddButton" Content="Add" Click="AddButton_Click" Margin="5"/>
            <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>